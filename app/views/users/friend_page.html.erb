<%= render partial: 'user_profile', locals:{user: @user} %>
<div class="container">

  <div class="row">

    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to 'My Post', post_page_user_path(@user), class:'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'My Comment', comment_page_user_path(@user) , class:'nav-link'%>
      </li>
       <li class="nav-item">
        <%= link_to 'My Collect', collect_page_user_path(@user) , class:'nav-link'%>
      </li>
       <li class="nav-item">
        <%= link_to 'My Draft', draft_page_user_path(@user) , class:'nav-link'%>
      </li>
       <li class="nav-item">
        <a class="nav-link active" href="#">My Friend</a>
      </li>
    </ul>

  </div>

  <div class="row">
    <div class="title col-12">  <h2>wating for response</h2></div>
    <%@inviting_friends.each do  |friend| %>
      <div class="col-2 p-3">
        <%=render partial:'/share/post_user_block', locals:{user: friend} %>
      </div>
    <%end%>
  </div>
  <div class="row mt-2">
    <div class="title col-12">  <h2>inviting me</h2></div>
    <%@inviting_me_friends.each do  |friend| %>
      <div class="col-2 p-3">
        <%=render partial:'/share/post_user_block', locals:{user: friend} %>
      </div>
    <%end%>
  </div>
  <div class="row mt-2">
    <div class="title col-12">  <h2>friend</h2></div>
    <%@friends.each do  |friend| %>
      <div class="col-2 p-3">
        <%=render partial:'/share/post_user_block', locals:{user: friend} %>
      </div>
    <%end%>
  </div>
</div>