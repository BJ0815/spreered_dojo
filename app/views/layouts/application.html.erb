<!DOCTYPE html>
<html>
  <head>
    <title>SpreeredDojo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Dojo Forum</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="forum_menu">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">Feeds <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">All Post</a>
        </li>        
        <li class="nav-item">
          <a class="nav-link" href="#">New Post</a>
        </li>
      </ul>

      <ul class="navbar-nav ">
        
        <% if current_user %>
        <li class="nav-item">
          <span class="navbar-text"><%=  current_user.email %></span>   
        </li> 
        <li class="nav-item">
          <a class="nav-link" href="#">profile</a>
        </li> 
        <li class="nav-item">
          <a class="nav-link" href="#">後台</a>
        </li> 
        <li class="nav-item">
          <%=link_to '登出', destroy_user_session_path, method: :delete, class:'nav-link' %>
        </li>
        <%else%>
        <li class="nav-item">
          <%= link_to '登入', new_user_session_path ,class:'nav-link'%>
        </li>
        <li>
          <%= link_to '註冊', new_user_registration_path,class:'nav-link' %>
        </li>
        <%end%>    
      </ul>

    </div>
  </nav>
  <!-- navbar end -->
    <%= yield %>
  </body>
</html>
